<h1>Edit <%= @playlist.name %></h1>
<br>

<div class="row justify-content-center">
        <%= bootstrap_form_for(@playlist) do |f| %>

                <%= f.form_group :public do %>
                    <%= f.check_box :public, label: "Make Public" %>
                <% end %>
            
                <%= f.text_field :name %>
                <br>
                <%= f.text_area :description %>
            
          
            <div class="text-center">
                <%= f.submit "Update Playlist", class: "btn btn-primary" %>
            </div>
        <% end %>
</div>
