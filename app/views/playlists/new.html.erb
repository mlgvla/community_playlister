<h1>Add a New Playlist</h1>

<div class="row justify-content-center">
        <%= bootstrap_form_for(@playlist) do |f| %>
            
                <%= f.text_field :name %>
                <br>
                <%= f.text_area :description %>
            
          
            <div class="text-center">
                <%= f.submit "Add New Playlist", class: "btn btn-primary" %>
            </div>
        <% end %>
</div>
