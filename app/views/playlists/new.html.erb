<h1>Add a New Playlist</h1>

<div class="row justify-content-center">
        <%= bootstrap_form_for(@playlist) do |f| %>
                <%= f.hidden_field :user_id  %>

                <%= f.form_group :public do %>
                    <%= f.check_box :public, label: "Make Public" %>
                <% end %>

                <%= f.text_field :name %>
                <br>
                <%= f.text_area :description %>
            
          
            <div class="text-center">
                <%= f.submit "Add New Playlist", class: "btn btn-primary" %>
            </div>
        <% end %>
</div>
